                                                <div class="week-past-item <?php echo $row->completed ? ' completed ' : ''; ?>">
                                                    <span><?php echo $row->text; ?></span>
                                                    <button></button>
                                                </div>
                                                <?php
                                            }
                                        }
                                    }
                                    ?>
                                </div>
                            </div>
                        </div>

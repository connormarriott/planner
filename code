                                }
                                else{
                                    ?>
                                    <span><?php echo $task_text; ?></span><button></button>
                                    <?php
                                }
                                ?>
                            </div>
                            <?php
                        }
                    }
                    ?>
                    <a href="#" class="add-daily-actions"><span>+</span> Add daily actions</a>
                </div>
                <?php

                $today_focus = $wpdb->get_results("
                        SELECT * FROM ".$wpdb->prefix."habit_data 

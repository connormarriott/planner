                    <?php
                    for ($ii = -10; $ii <= 6; $ii++){
                        $m = date('m',time() + $imitate_day * 86400);
                        $m_new = $m + $ii ;

                        $m_year = date('Y',time() + $imitate_day * 86400);

                        if ($m_new > 12){
                            $m_new = $m_new - 12;
                            $m_year++;
                        }
                        elseif($m_new < 1){
                            $m_new = 12 + $m_new;
                            $m_year--;
                        }

                        $monthName = date('F', mktime(0, 0, 0, $m_new, 10));
                        ?>
                        <h2 class="<?php if ($ii == 0) echo 'is-h2-current'; ?>">
                            <?php
                            if ($ii > -10){
                                ?>

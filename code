                            ORDER BY number ASC
                        ");
                        if ((($is_today_N > 1) && ($i == 0)) || $is_today_planned){
                                                    $s_stats[$i]['task_all'] = 0;
                                                    $s_stats[$i]['task_completed'] = 0;
                                                    $s_stats[$i]['focus_all'] = 0;
                                                    $s_stats[$i]['focus_completed'] = 0;


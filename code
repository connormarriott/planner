                                $focus_time = $focus->action_time;
                                $time_type = '';
                                if (strpos($focus_time, 'am') !== false) {
                                    $time_type = 'am';
                                }
                                elseif(strpos($focus_time, 'pm') !== false){
                                    $time_type = 'pm';
                                }
                                $focus_time = str_replace(array('am','pm'),'',$focus_time);
